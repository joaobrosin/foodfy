{% extends "layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/dish.css">
{% endblock styles %}

{% block content %}
<div class="main">
    <img class="dish "src="{{recipe.image}}" alt="Imagem de">

    <h1>{{recipe.title}}</h1>
    <p class="author">por {{recipe.author}}</p>

    <h2>Ingredientes <span class="ingredientButton showed">esconder</span></h2>
    
    <ul class="ingredientList">
        {% for ingredient in recipe.ingredients %}
            <li>{{ingredient}}</li>
        {% endfor %}
    </ul>

    <h2>Modo de preparo <span class="prepareButton showed">esconder</span></h2>
    <ul class="prepareList">
        {% for step in recipe.preparation %}
            <li>{{step}}</li>
        {% endfor %}
    </ul>

    <h2>Informações adicionais <span class="informationButton showed">esconder</span></h2>
    <div class="informationList">
        <p class="text">{{recipe.information}}</p>
    </div>
</div>

<script src="/scripts/show-hide.js"></script>
{% endblock content %}